  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "tscpaths": "^0.0.9",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "test:unit": "yarn test -c jest-unit-config.ts",
    "test:integration": "yarn test -c jest-integration-config.ts",
    "test:dev": "yarn test -c jest-unit-config.ts ",
    "test:ci": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "build": "rimraf build && tsc --project tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./build",
    "start": "node build/index.js"
  }
}
